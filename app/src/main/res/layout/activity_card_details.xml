<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    android:layout_margin="20dp"
    android:elevation="12dp"
    tools:context=".user_and_payment_management.CardDetails"
    android:padding="-5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_header1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/paylst"
            android:background="@color/white"
            android:layout_marginTop="-180dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"/>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            app:cardElevation="25dp">

            <Button
                android:id="@+id/swap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/swap"
                android:backgroundTint="@color/orange"
                android:textAllCaps="false"
                app:backgroundTint="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameText3"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="25dp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/price3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"
                    android:text="card number"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="5dp"
                        android:text="exp date:"
                        android:textColor="@color/black"
                        android:id="@+id/new2"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discountPrice4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-70dp"
                        android:layout_toRightOf="@id/new2"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="160dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="5dp"
                        android:text="cvv:"
                        android:textColor="@color/black"
                        android:id="@+id/new3"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discountPrice5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-100dp"
                        android:layout_toRightOf="@id/new3"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="320dp"
                        android:layout_height="2dp"
                        android:background="@color/orange"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:text="Total Amount Rs:"
                        android:textColor="@color/black"
                        android:id="@+id/new1"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/totprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginTop="50dp"
                        android:paddingBottom="5dp"
                        android:textColor="#40ff00"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:gravity="center_horizontal" />

                </RelativeLayout>



                <Button
                    android:id="@+id/popupbtn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Pay Now"
                    android:textAllCaps="false"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="105dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/orange"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>