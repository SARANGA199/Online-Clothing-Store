<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".user_and_payment_management.Cardform">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/backarrow" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-2dp"
            android:padding="15dp"
            android:src="@drawable/search" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_header1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/oaddc"
        android:background="@color/white"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image_header1"
        android:gravity="center"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    <ImageView
        android:id="@+id/imgpay"
        android:layout_width="318dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="228dp"
        android:scaleType="fitCenter"
        android:src="@drawable/msvisa" />

    <EditText
        android:id="@+id/cardname"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="30dp"
        android:paddingLeft="1dp"
        android:hint="     Name of Card"
        android:inputType="text"
        android:background="@drawable/textbdr"/>

    <EditText
        android:id="@+id/cardnum"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="30dp"
        android:paddingLeft="1dp"
        android:hint="     Card Number"
        android:inputType="text"
        android:background="@drawable/textbdr"/>

    <EditText
        android:id="@+id/expdate"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="30dp"
        android:paddingLeft="1dp"
        android:hint="     Expiry Date      MM/YY"
        android:inputType="text"
        android:background="@drawable/textbdr"/>

    <EditText
        android:id="@+id/cvv"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="260dp"
        android:paddingLeft="1dp"
        android:hint="     CVV"
        android:inputType="text"
        android:background="@drawable/textbdr"/>

    <Button
        android:id="@+id/addcardbtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/bg_btn"
        android:text="@string/pay_nowbtn"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"/>

</RelativeLayout>